<div class="container">
  <h1 class="demo-section-title">Gossip Example</h1>
  <div id="gossip">
    <div class="row">
      <div class="col-xs-6 ">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="formGroupInputDefault">Name</label>
          <div class="col-sm-8">
            <input class="form-control"   v-model="name" type="text" id="formGroupInputDefault" >
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="formGroupInputDefault">Message</label>
          <div class="col-sm-10">
            <input v-model="message" placeholder="Enter your message" class="form-control" @keyup.enter="sendMessage" id="formGroupInputDefault" >
          </div>
        </div>
      </div>
    </div>
    <h2 class="demo-section-title">Messages</h2>
    <div class="row" v-for="gossip in messages">
      <div class="col-xs-2">
        <span class="fui-user"></span> {{ gossip.name }}
      </div>
      <div class="col-xs-8">
        <span class="fui-chat"></span> {{ gossip.message }}
      </div>
    </div>
  </div>
</div>
